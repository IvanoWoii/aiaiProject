<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_putih"
    tools:context=".ActivtyLandingPageActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulat_lingkaran"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/img_1"/>

    <ImageView
        android:layout_width="169dp"
        android:layout_height="142dp"
        android:layout_below="@+id/img_1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logosmt4"
        android:id="@+id/img_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_2"
        android:text="Selamat Datang Di Aplikasi Kami"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:id="@+id/txt1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:text="Aplikasi Ini bertujuan Untuk Memudahkan Petugas Untuk Mencatat Dan Mendata"
        android:gravity="center"
        android:padding="20dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@android:color/black"
        android:id="@+id/txt2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Login"
        android:background="@drawable/btn_cornerradius"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/btn1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn1"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Register"
        android:background="@drawable/btn_cornerradius"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/btn2"/>
</RelativeLayout>