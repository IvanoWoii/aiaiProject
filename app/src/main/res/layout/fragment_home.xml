<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/background_putih">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Data"
                    android:id="@+id/txt_login"
                    android:textSize="36sp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/biru_main"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Nomor Meter"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/txt_nomorMeter"
                    android:background="@drawable/costum_edittext"
                    android:drawableLeft="@drawable/ic_baseline_add_24"
                    android:drawablePadding="8dp"
                    android:hint="Nomor Meter"
                    android:fontFamily="@font/poppinsregular"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/biru_main"
                    android:maxLines="1"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Kriteria Garansi"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/txt_kriteriaGaransi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/costum_edittext"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Gangguan"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/txt_gangguan"
                    android:background="@drawable/costum_edittext"
                    android:drawableLeft="@drawable/ic_baseline_add_24"
                    android:drawablePadding="8dp"
                    android:hint="Contoh : Meter Meledak"
                    android:fontFamily="@font/poppinsregular"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/biru_main"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Tahun Buat"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/txt_tahunBuat"
                    android:background="@drawable/costum_edittext"
                    android:drawableLeft="@drawable/ic_baseline_add_24"
                    android:drawablePadding="8dp"
                    android:hint="Tahun Buat"
                    android:fontFamily="@font/poppinsregular"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/biru_main"
                    android:inputType="number"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Tahun Ganti Meter"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/txt_tahunGantiMeter"
                    android:background="@drawable/costum_edittext"
                    android:drawableLeft="@drawable/ic_baseline_add_24"
                    android:drawablePadding="8dp"
                    android:hint="Tahun Ganti Meter"
                    android:fontFamily="@font/poppinsregular"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/biru_main"
                    android:inputType="number"
                    android:maxLines="1"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_scan"
                    android:text="Scann"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/kuning"
                    android:textColor="@color/black"
                    app:cornerRadius="20dp"
                    android:layout_gravity="center"/>
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/btn_tambahData"
                    android:text="Tambah Data"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/biru_second"
                    android:textColor="@color/black"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>